{
  "name": "@code-reviewer/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "IaC Dependency Detection Platform - Monorepo root",
  "type": "module",
  "workspaces": [
    "api",
    "ui",
    "e2e"
  ],
  "scripts": {
    "dev": "npm run dev:api & npm run dev:ui",
    "dev:api": "npm run dev --workspace=api",
    "dev:ui": "npm run dev --workspace=ui",
    "build": "npm run build --workspaces",
    "build:api": "npm run build --workspace=api",
    "build:ui": "npm run build --workspace=ui",
    "test": "npm run test --workspaces --if-present",
    "test:api": "npm run test --workspace=api",
    "test:ui": "npm run test --workspace=ui",
    "test:e2e": "npm run test --workspace=e2e",
    "test:e2e:api": "npm run test:api --workspace=e2e",
    "test:e2e:ui": "npm run test:ui --workspace=e2e",
    "test:e2e:watch": "npm run test:watch --workspace=e2e",
    "test:e2e:coverage": "npm run test:coverage --workspace=e2e",
    "test:e2e:ci": "npm run test:ci --workspace=e2e",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "format:check": "npm run format:check --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "db:up": "make up",
    "db:down": "make down",
    "db:migrate": "make migrate",
    "db:migrate:status": "make migrate-status",
    "db:migrate:reset": "make migrate-reset",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:clean": "docker compose down -v",
    "clean": "npm run clean --workspaces --if-present && rimraf node_modules",
    "deps:check": "npm run deps:check --workspaces --if-present",
    "deps:update": "npm run deps:update --workspaces --if-present",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "prepare": "husky install || true",
    "e2e:setup": "npm run setup --workspace=e2e",
    "e2e:playwright": "npm run test:ui --workspace=e2e",
    "e2e:playwright:headed": "npm run test:ui:headed --workspace=e2e",
    "e2e:playwright:debug": "npm run test:ui:debug --workspace=e2e",
    "e2e:playwright:report": "npm run test:ui:report --workspace=e2e",
    "docs:install": "cd docs/docusaurus && npm install",
    "docs:dev": "cd docs/docusaurus && npm start",
    "docs:build": "cd docs/docusaurus && npm run build",
    "docs:serve": "cd docs/docusaurus && npm run serve",
    "docs:clear": "cd docs/docusaurus && npm run clear",
    "openapi:generate": "npm run openapi:generate --workspace=api",
    "openapi:generate:json": "npm run openapi:generate:json --workspace=api",
    "openapi:generate:yaml": "npm run openapi:generate:yaml --workspace=api"
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "rimraf": "^5.0.5",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.8.1",
  "keywords": [
    "iac",
    "infrastructure-as-code",
    "terraform",
    "helm",
    "dependency-detection",
    "code-review"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/org/code-reviewer.git"
  },
  "author": "Code Reviewer Team",
  "license": "MIT"
}
