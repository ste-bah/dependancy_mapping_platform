{
  "name": "@code-reviewer/api",
  "version": "1.0.0",
  "description": "IaC Dependency Detection API - Enterprise-grade infrastructure code analysis",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./parsers": {
      "types": "./dist/parsers/index.d.ts",
      "import": "./dist/parsers/index.js"
    },
    "./detectors": {
      "types": "./dist/detectors/index.d.ts",
      "import": "./dist/detectors/index.js"
    },
    "./services": {
      "types": "./dist/services/index.d.ts",
      "import": "./dist/services/index.js"
    },
    "./repositories": {
      "types": "./dist/repositories/index.d.ts",
      "import": "./dist/repositories/index.js"
    },
    "./errors": {
      "types": "./dist/errors/index.d.ts",
      "import": "./dist/errors/index.js"
    },
    "./logging": {
      "types": "./dist/logging/index.d.ts",
      "import": "./dist/logging/index.js"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "import": "./dist/config/index.js"
    },
    "./quality": {
      "types": "./dist/quality/index.d.ts",
      "import": "./dist/quality/index.js"
    },
    "./benchmarks": {
      "types": "./dist/benchmarks/index.d.ts",
      "import": "./dist/benchmarks/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "build:clean": "rimraf dist && tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest watch",
    "test:rollup": "vitest run src/services/rollup/__tests__/*.test.ts src/services/rollup/__tests__/matchers/*.test.ts",
    "test:rollup:coverage": "vitest run --coverage src/services/rollup/__tests__/*.test.ts src/services/rollup/__tests__/matchers/*.test.ts",
    "test:rollup:watch": "vitest watch src/services/rollup/__tests__/*.test.ts src/services/rollup/__tests__/matchers/*.test.ts",
    "test:rollup:integration": "vitest run src/services/rollup/__tests__/integration/*.test.ts",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "db:migrate": "node-pg-migrate up",
    "db:rollback": "node-pg-migrate down",
    "db:create-migration": "node-pg-migrate create",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "deps:check": "depcheck",
    "deps:update": "ncu -u",
    "deps:analyze": "tsx scripts/analyze-dependencies.ts",
    "deps:analyze:json": "tsx scripts/analyze-dependencies.ts --json",
    "deps:analyze:fix": "tsx scripts/analyze-dependencies.ts --fix",
    "quality:check": "tsx scripts/quality-check.ts",
    "quality:complexity": "tsx scripts/quality-check.ts --complexity",
    "quality:deadcode": "tsx scripts/quality-check.ts --deadcode",
    "quality:debt": "tsx scripts/quality-check.ts --debt",
    "benchmark": "tsx src/benchmarks/run-benchmarks.ts",
    "benchmark:search": "tsx src/benchmarks/run-benchmarks.ts --suite=search",
    "benchmark:all": "tsx src/benchmarks/run-benchmarks.ts --suite=all",
    "benchmark:100k": "tsx src/benchmarks/run-benchmarks.ts --suite=search --scale=100k",
    "benchmark:json": "tsx src/benchmarks/run-benchmarks.ts --suite=all --format=json",
    "openapi:generate": "tsx scripts/generate-openapi.ts",
    "openapi:generate:json": "tsx scripts/generate-openapi.ts --json-only",
    "openapi:generate:yaml": "tsx scripts/generate-openapi.ts --yaml-only",
    "prepare": "cd .. && husky install api/.husky || true",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.614.0",
    "@aws-sdk/s3-request-presigner": "^3.614.0",
    "@babel/parser": "^7.24.8",
    "@fastify/cookie": "^9.3.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@fastify/type-provider-typebox": "^4.0.0",
    "@gitbeaker/rest": "^40.1.0",
    "@octokit/rest": "^21.0.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/core": "^1.25.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.52.1",
    "@opentelemetry/instrumentation": "^0.52.1",
    "@opentelemetry/instrumentation-fastify": "^0.38.0",
    "@opentelemetry/instrumentation-http": "^0.52.1",
    "@opentelemetry/instrumentation-ioredis": "^0.42.0",
    "@opentelemetry/instrumentation-pg": "^0.43.0",
    "@opentelemetry/resources": "^1.25.1",
    "@opentelemetry/sdk-node": "^0.52.1",
    "@opentelemetry/sdk-trace-node": "^1.25.1",
    "@opentelemetry/semantic-conventions": "^1.25.1",
    "@sinclair/typebox": "^0.32.35",
    "async-retry": "^1.3.3",
    "bullmq": "^5.12.0",
    "dotenv": "^16.4.5",
    "fast-glob": "^3.3.2",
    "fastify": "^4.28.0",
    "fastify-plugin": "^4.5.1",
    "glob": "^10.4.5",
    "ioredis": "^5.4.1",
    "jose": "^5.6.3",
    "js-yaml": "^4.1.0",
    "lodash-es": "^4.17.21",
    "ms": "^2.1.3",
    "nanoid": "^5.0.7",
    "node-pg-migrate": "^7.0.0",
    "pg": "^8.12.0",
    "pg-pool": "^3.6.2",
    "pino": "^9.2.0",
    "pino-pretty": "^11.2.1",
    "prom-client": "^15.1.3",
    "tar": "^7.4.3",
    "undici": "^6.19.2",
    "yaml": "^2.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/async-retry": "^1.4.8",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash-es": "^4.17.12",
    "@types/ms": "^0.7.34",
    "@types/node": "^20.14.11",
    "@types/pg": "^8.11.6",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.0.3",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.1.1",
    "lint-staged": "^15.2.7",
    "npm-check-updates": "^16.14.20",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "vitest": "^2.0.3"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.8.1",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "iac",
    "infrastructure-as-code",
    "terraform",
    "helm",
    "dependency-detection",
    "code-review",
    "static-analysis"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/org/code-reviewer.git",
    "directory": "api"
  },
  "author": "Code Reviewer Team",
  "license": "MIT"
}
