# ==============================================================================
# Development Environment Configuration
# ==============================================================================
# This file contains development-specific settings
# Values here override .env but are overridden by .env.local
# ==============================================================================

NODE_ENV=development
APP_VERSION=0.1.0-dev

# Server
HOST=127.0.0.1
PORT=3000

# Logging
LOG_LEVEL=debug
LOG_PRETTY=true
LOG_REQUESTS=true
LOG_RESPONSES=false

# Development database
DATABASE_URL=postgresql://dmp_app:dmp_secure_password@localhost:5432/dmp_db
DB_SSL=false
DB_POOL_MIN=1
DB_POOL_MAX=5

# Redis (optional in development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# CORS - allow all in development
CORS_ORIGINS=*
CORS_CREDENTIALS=true

# Lenient rate limiting for development
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=1000

# Authentication - use simple secret in development
JWT_ALGORITHM=HS256
JWT_SECRET=development-secret-change-in-production-at-least-32-chars
ACCESS_TOKEN_TTL=86400
REFRESH_TOKEN_TTL=604800
SESSION_SECRET=development-session-secret-change-in-production-32

# Feature flags - enable debug features
FEATURE_ASYNC_SCANNING=true
FEATURE_WEBHOOKS=true
FEATURE_METRICS=false
FEATURE_CACHING=false
FEATURE_GRAPHQL=false
DEBUG_MODE=true
VERBOSE_ERRORS=true

# Detection - faster timeouts for development
DETECTION_TIMEOUT_PER_FILE=10000
DETECTION_TOTAL_TIMEOUT=60000
DETECTION_PARALLEL_DETECTORS=2
DETECTION_ENABLE_CACHING=false

# Storage - local file system
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=/tmp/code-reviewer-dev

# Monitoring - disabled in development
PROMETHEUS_ENABLED=false
HEALTH_CHECK_ENABLED=true

# Tenant configuration
TENANT_REQUIRED=false
