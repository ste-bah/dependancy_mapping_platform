{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": false,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "baseUrl": ".",
    "paths": {
      "@e2e/*": ["./*"],
      "@e2e/support/*": ["./support/*"],
      "@e2e/fixtures/*": ["./fixtures/*"],
      "@e2e/domain/*": ["./domain/*"],
      "@e2e/services/*": ["./services/*"],
      "@e2e/types/*": ["./types/*"],
      "@e2e/data/*": ["./data/*"],
      "@e2e/errors/*": ["./errors/*"],
      "@e2e/logging/*": ["./logging/*"],
      "@e2e/api/*": ["./api/*"],
      "@e2e/ui/*": ["./ui/*"],
      "@e2e/config/*": ["./config/*"],
      "@support/*": ["./support/*"],
      "@fixtures/*": ["./fixtures/*"],
      "@api/*": ["../api/src/*"],
      "@api/types/*": ["../api/src/types/*"],
      "@api/parsers/*": ["../api/src/parsers/*"],
      "@api/services/*": ["../api/src/services/*"],
      "@api/repositories/*": ["../api/src/repositories/*"],
      "@api/errors/*": ["../api/src/errors/*"],
      "@api/config/*": ["../api/src/config/*"]
    },
    "types": ["vitest/globals", "node", "@playwright/test"]
  },
  "include": [
    "support/**/*.ts",
    "tests/**/*.ts",
    "types/**/*.ts",
    "domain/**/*.ts",
    "services/**/*.ts",
    "data/**/*.ts",
    "errors/**/*.ts",
    "logging/**/*.ts",
    "api/**/*.ts",
    "ui/**/*.ts",
    "config/**/*.ts",
    "fixtures/**/*.ts",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "reports",
    "test-results",
    "playwright-report"
  ],
  "references": [
    { "path": "../api" }
  ]
}
