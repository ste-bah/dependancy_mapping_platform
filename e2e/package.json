{
  "name": "@code-reviewer/e2e",
  "version": "1.0.0",
  "private": true,
  "description": "End-to-end testing infrastructure for Code Reviewer",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:api": "vitest run tests/**/*.spec.ts tests/**/*.test.ts",
    "test:api:watch": "vitest watch tests/**/*.spec.ts tests/**/*.test.ts",
    "test:ui": "playwright test",
    "test:ui:headed": "playwright test --headed",
    "test:ui:debug": "playwright test --debug",
    "test:ui:report": "playwright show-report reports/playwright",
    "test:ui:codegen": "playwright codegen",
    "test:coverage": "vitest run --coverage",
    "test:auth": "vitest run tests/auth",
    "test:scan": "vitest run tests/scan",
    "test:rollup": "vitest run tests/rollup",
    "test:ci": "vitest run && playwright test --reporter=github",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier --check \"**/*.ts\"",
    "clean": "rimraf dist coverage reports test-results",
    "setup": "playwright install --with-deps chromium firefox",
    "deps:check": "depcheck",
    "deps:update": "ncu -u"
  },
  "dependencies": {},
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@playwright/test": "^1.42.1",
    "@testcontainers/postgresql": "^10.7.2",
    "@types/node": "^20.11.24",
    "@types/pg": "^8.11.2",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.0.5",
    "depcheck": "^1.4.7",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "ioredis": "^5.4.1",
    "msw": "^2.2.3",
    "npm-check-updates": "^16.14.15",
    "pg": "^8.11.3",
    "playwright": "^1.42.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "testcontainers": "^10.7.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "undici": "^6.7.0",
    "vitest": "^2.0.5"
  },
  "peerDependencies": {
    "@code-reviewer/api": "workspace:*",
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "@code-reviewer/api": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "e2e",
    "testing",
    "playwright",
    "vitest",
    "integration-tests"
  ],
  "author": "Code Reviewer Team",
  "license": "MIT"
}
