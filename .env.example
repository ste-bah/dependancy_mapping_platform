# Dependency Mapping Platform - Environment Configuration
# Copy this file to .env and customize as needed

# =============================================================================
# PostgreSQL Configuration
# =============================================================================
POSTGRES_USER=dmp
POSTGRES_PASSWORD=dmp_secret_change_me
POSTGRES_DB=dmp_dev
POSTGRES_PORT=5432

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PORT=6379
REDIS_MAXMEMORY=256mb
# Uncomment for production with more memory:
# REDIS_MAXMEMORY=1gb

# =============================================================================
# MinIO (S3-compatible) Configuration
# =============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin_change_me
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
# Default buckets created: dmp-repos, dmp-scans, dmp-temp
# Lifecycle policies:
#   - dmp-repos/temp/* expires after 7 days
#   - dmp-scans/* expires after 30 days
#   - dmp-temp/* expires after 1 day

# =============================================================================
# API Configuration
# =============================================================================
NODE_ENV=development
API_PORT=3000

# =============================================================================
# OAuth Configuration (for Phase 1)
# =============================================================================
# GITHUB_CLIENT_ID=your_github_client_id
# GITHUB_CLIENT_SECRET=your_github_client_secret

# =============================================================================
# JWT Configuration (for Phase 1)
# =============================================================================
# JWT_SECRET=your_jwt_secret_min_32_chars
# JWT_EXPIRES_IN=15m
# JWT_REFRESH_EXPIRES_IN=7d
